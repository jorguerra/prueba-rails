<div class="row">
<% @todos.each do |todo| %>
<div class="col-lg-2 col-md-3 col-sm-6">
  <div class="well text-center">
    <h2><small>
      <%=todo.description%> <br>
      Completed: <span class="glyphicon glyphicon-<%=todo.completed ? 'ok':'remove'%>"></span>
    </small></h2>
    <a href="<%= todo_path(todo) %>" class="btn btn-primary btn-xs">show</a>
    <a href="<%= todo_edit_path(todo) %>" class="btn btn-primary btn-xs">edit</a>
    <a href="<%= todo_delete_path(todo) %>" data-method="delete" class="btn btn-danger btn-xs">delete</a> <br>
    <a href="<%= todo_completed_path(todo) %>" style="margin-top:0.6em" class="btn btn-primary btn-xs">Mark as completed</a>
  </div>
</div>
<% end %>
</div>
